{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["ES6"],
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@connectors/*": ["./src/connectors/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@utils/*": ["./src/utils"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
